<odoo>
    <recordid="my_message_wizard_form" model="ir.ui.view">
        <field name="name">my.message.wizard.form</field>
        <field name="model">my.message.wizard</field>
        <field name="arch" type="xml">
            <form>
                <p>
                    <field name="message" readonly="1"/>
                </p>
                <footer>
                    <button name="action_ok" string="OK" type="object" default_focus="1" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo